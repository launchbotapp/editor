
{
  "compilerOptions": {
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "types": ["react"],
    "rootDir": "src",
    "outDir": "dist",
    "stripInternal": true,
    "removeComments": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}